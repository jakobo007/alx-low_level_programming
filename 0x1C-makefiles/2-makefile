# Compiler
CC = gcc

# Source files
SRC = main.c school.c

# Object files (pattern rule will generate these)
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Rule to build everything
all: $(NAME)

# Rule to link object files to create the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to compile source files into object files
%.o: %.c
	$(CC) -c -o $@ $<

.PHONY: all

